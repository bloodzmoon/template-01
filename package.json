    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "autoprefixer": "^9.8.6",
    "craco-plugin-scoped-css": "^1.1.0",
    "enzyme": "^3.11.0",
    "postcss": "^7.0.35",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "stylelint": "^13.9.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --watchAll=false",
    "lint": "npm run stylelint:fix && npm run prettier:fix",
    "stylelint:fix": "stylelint --fix src/**/*.css",
    "prettier:fix": "prettier --write src/**/*.{ts,tsx}",
    "eject": "react-scripts eject"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
